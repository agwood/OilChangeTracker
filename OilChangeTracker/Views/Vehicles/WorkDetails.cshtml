@model OilChangeTracker.ViewModels.OilChangesViewModel





@*<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css">*@

<div class="row">
    <h2>@Model.Vehicle.Nickname</h2>
    <h3>Oil Change records for @Model.Vehicle.Year  @Model.Vehicle.Make  @Model.Vehicle.Model</h3>
</div>

<div class="row">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Date</th>
                <th>Mileage</th>
                <th>Filter Brand</th>
                <th>Filter Model</th>
                <th>Oil Brand</th>
                <th>Viscosity</th>
                <th>Miscellaneous Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ocevent in @Model.OilChangeEvents)
            {
                <tr>
                    <th scope="row">@ocevent.WorkDate.ToString("yyyy-MM-dd")</th>
                    <td>@ocevent.Mileage</td>
                    <td>@ocevent.OilFilterBrand</td>
                    <td>@ocevent.OilFilterModel</td>
                    <td>@ocevent.OilBrand</td>
                    <td>@ocevent.OilViscosity</td>
                    <td>@ocevent.OtherNotes</td>

                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}